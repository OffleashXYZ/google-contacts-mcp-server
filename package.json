{
  "name": "google-contacts-mcp",
  "version": "1.0.0",
  "description": "Serverless MCP server for Google Contacts with per-user OAuth on AWS Lambda",
  "type": "module",
  "main": "dist/lambda.js",
  "scripts": {
    "build": "tsc",
    "build:lambda": "rm -rf lambda-package && mkdir lambda-package && cp -r dist lambda-package/ && cp -r public lambda-package/ && cp package.json package-lock.json lambda-package/ && cd lambda-package && npm ci --production",
    "dev": "tsx src/lambda.ts",
    "start": "node dist/lambda.js",
    "typecheck": "tsc --noEmit",
    "cdk:deploy": "cdk deploy",
    "cdk:destroy": "cdk destroy",
    "cdk:synth": "cdk synth"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "google-contacts",
    "contacts",
    "google-people-api",
    "aws-lambda",
    "serverless"
  ],
  "author": "Offleash (https://offleash.xyz)",
  "license": "CC-BY-NC-SA-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/OffleashXYZ/google-contacts-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/OffleashXYZ/google-contacts-mcp-server/issues"
  },
  "homepage": "https://github.com/OffleashXYZ/google-contacts-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-ssm": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "express": "^4.18.2",
    "googleapis": "^144.0.0",
    "serverless-http": "^3.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "aws-cdk-lib": "^2.120.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
